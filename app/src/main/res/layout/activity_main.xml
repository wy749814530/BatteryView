<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <com.wy.view.BatteryView
        android:id="@+id/verticalBattery"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        app:batteryColor="@android:color/white"
        app:batteryOrientation="vertical" />

    <com.wy.view.BatteryView
        android:id="@+id/Battery2View"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center"
        app:batteryOrientation="horizontal" />

    <com.wy.view.BatteryView
        android:id="@+id/Battery3View"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center"
        app:batteryOrientation="horizontal" />

    <com.wy.view.BatteryView
        android:id="@+id/Battery4View"
        android:layout_width="20dp"
        android:layout_height="8dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center"
        app:batteryOrientation="horizontal" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
</LinearLayout>
